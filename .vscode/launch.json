		{
			"type": "pwa-chrome",
			"name": "FrontEnd",
			"request": "launch",
			"url": "http://localhost:4200",
			"webRoot": "${workspaceFolder}/client",
			"sourceMapPathOverrides": {
				"meteor://ðŸ’»app/*": "${workspaceFolder}/*",
				"webpack:///./~/*": "${workspaceFolder}/node_modules/*",
